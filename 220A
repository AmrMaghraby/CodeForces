///IN THE NAME OF ALLAH
#include<bits/stdc++.h>
using namespace std;
int main()
{
  int n;
  scanf("%d",&n);
  int Arr[n],A2[n];
  for(int i=0;i<n;i++)
   {
    scanf("%d",&Arr[i]);
    A2[i]=Arr[i];
   }
  sort(Arr,Arr+n);
  int cnt=0;

  for(int i=0;i<n;i++)
  if(Arr[i]!=A2[i])
   cnt++;
  if(cnt>2)
    printf("NO");
  else printf("YES");
}

